<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="io.weimu.www.TestAreaActivity">

    <io.weimu.www.widget.SimpleButton
        android:id="@+id/simpleButton"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:enabled="false"
        android:text="测试信号"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:wm_backgroundUnEnableColor="#979797"
        app:wm_backgroundColor="#31429D"
        app:wm_backgroundPressColor="#FFB938"
        app:wm_cornerRadius_BR="25dp"
        app:wm_cornerRadius_TL="25dp"
        app:wm_strokeColor="#763CA2"
        app:wm_strokePressColor="#178BEC"
        app:wm_strokeWidth="1dp"
        app:wm_textUnEnableColor="@color/red_tiny"
        app:wm_textColor="@color/white"
        app:wm_textPressColor="#9A9A9A" />

</android.support.constraint.ConstraintLayout>
